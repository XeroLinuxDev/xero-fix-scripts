#!/bin/bash
echo
echo "#################################"
echo " Applying SDDM Black Screen Fix  "
echo "#################################"
sleep 3
sudo sed -i "s/User=liveuser/User=/g" /etc/sddm.conf.d/kde_settings.conf
sleep 3
echo
echo "#################################"
echo "    All Done ! Pllease Reboot    "
echo "#################################"
sleep 3
