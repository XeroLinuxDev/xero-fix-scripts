#!/bin/bash
#set -e
##################################################################################################################
# Written to be used on 64 bits computers
# Author 	: 	DarkXero
# Website 	: 	http://xerolinux.xyz
##################################################################################################################
echo
echo "Removing SDDM"
echo "#############"
sudo pacman -Rdd --noconfirm sddm
echo
sleep 2
echo "Installing & Enabling SDDM-git"
echo "##############################"
sudo pacman -S sddm-git --needed --noconfirm
sleep 2
sudo systemctl enable sddm.service -f
echo "##################################"
echo "SDDM is now active - Please Reboot"
echo "##################################"
sleep 3
