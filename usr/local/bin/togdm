#!/bin/bash
#set -e
##################################################################################################################
# Written to be used on 64 bits computers
# Author 	: 	DarkXero
# Website 	: 	http://xerolinux.xyz
##################################################################################################################
echo
echo "Removing Current Display Manager (Gnome Only)"
echo "#############################################"
sudo pacman -Rdd --noconfirm sddm &>/dev/null; sudo pacman -Rdd --noconfirm sddm-kcm &>/dev/null; sudo pacman -Rdd --noconfirm lightdm &>/dev/null; sudo pacman -Rdd --noconfirm lightdm-gtk-greeter &>/dev/null; sudo pacman -Rdd --noconfirm lightdm-gtk-greeter-settings &>/dev/null
echo
sleep 2
echo "Installing & Enabling GDM"
echo "#########################"
sudo pacman -S --needed --noconfirm gdm
sleep 2
sudo systemctl enable gdm.service -f
echo "############################X#####"
echo "SDDM is now active - Please Reboot"
echo "############################X#####"
sleep 3
